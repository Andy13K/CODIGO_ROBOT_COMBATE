// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// ENDPOINT: ENCENDER MOTOR
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
void handleEncender() {
  if(server.hasArg("velocidad")) {
    int vel = server.arg("velocidad").toInt();
    int velocidad255 = map(vel, 0, 100, 0, 255);
    encenderMotor(velocidad255);
    server.send(200, "text/plain", "Motor encendido al " + String(vel) + "%");
  } else {
    encenderMotor(191); // 75% por defecto
    server.send(200, "text/plain", "Motor encendido al 75%");
  }
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// ENDPOINT: APAGAR MOTOR
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
void handleApagar() {
  apagarMotor();
  server.send(200, "text/plain", "Motor apagado");
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// ENDPOINT: ESTADO DEL SISTEMA
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
void handleEstado() {
  String json = "{";
  json += "\"encendido\":" + String(motorEncendido ? "true" : "false") + ",";
  json += "\"velocidad\":" + String((velocidadActual * 100) / 255);
  json += "}";
  
  server.send(200, "application/json", json);
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// CONFIGURACIÃ“N INICIAL
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
void setup() {
  // Inicializar comunicaciÃ³n serial
  Serial.begin(115200);
  delay(1000);
  
  Serial.println("\n\n");
  Serial.println("â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•");
  Serial.println("   ROBOT DE PELEA - Sistema Iniciando");
  Serial.println("â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•");
  
  // Configurar pines del motor
  pinMode(RPWM, OUTPUT);
  pinMode(LPWM, OUTPUT);
  pinMode(R_EN, OUTPUT);
  pinMode(L_EN, OUTPUT);
  pinMode(LED_BUILTIN, OUTPUT);
  
  // Habilitar canales del BTS7960
  digitalWrite(R_EN, HIGH);
  digitalWrite(L_EN, HIGH);
  
  // Motor apagado al inicio
  apagarMotor();
  
  Serial.println("âœ“ Pines configurados");
  Serial.println("âœ“ BTS7960 habilitado");
  
  // Crear red WiFi
  Serial.println("\nCreando red WiFi...");
  Serial.print("SSID: ");
  Serial.println(ssid);
  
  WiFi.softAP(ssid, password);
  delay(100);
  
  IPAddress IP = WiFi.softAPIP();
  Serial.println("\nâœ“ Red WiFi creada exitosamente");
  Serial.print("âœ“ IP del servidor: ");
  Serial.println(IP);
  Serial.println("âœ“ ContraseÃ±a: " + String(password));
  
  // Configurar rutas del servidor web
  server.on("/", handleRoot);
  server.on("/encender", handleEncender);
  server.on("/apagar", handleApagar);
  server.on("/estado", handleEstado);
  
  // Iniciar servidor
  server.begin();
  Serial.println("âœ“ Servidor web iniciado");
  
  Serial.println("\nâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•");
  Serial.println("   SISTEMA LISTO");
  Serial.println("â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•");
  Serial.println("\nPara controlar el robot:");
  Serial.println("1. Conectar celular a WiFi: " + String(ssid));
  Serial.println("2. ContraseÃ±a: " + String(password));
  Serial.println("3. Abrir navegador en: http://" + IP.toString());
  Serial.println("\n");
  
  // Parpadeo de confirmaciÃ³n
  for(int i = 0; i < 5; i++) {
    digitalWrite(LED_BUILTIN, HIGH);
    delay(100);
    digitalWrite(LED_BUILTIN, LOW);
    delay(100);
  }
  
  tiempoInicio = millis();
}

// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
// BUCLE PRINCIPAL
// â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
void loop() {
  // Manejar peticiones del servidor web
  server.handleClient();
  
  // Mostrar estado cada 10 segundos
  static unsigned long ultimoReporte = 0;
  if(millis() - ultimoReporte > 10000) {
    ultimoReporte = millis();
    
    Serial.println("\nâ”€â”€â”€ Estado del Sistema â”€â”€â”€");
    Serial.print("Tiempo operaciÃ³n: ");
    Serial.print((millis() - tiempoInicio) / 1000);
    Serial.println(" segundos");
    Serial.print("Motor: ");
    Serial.println(motorEncendido ? "ENCENDIDO" : "APAGADO");
    Serial.print("Velocidad: ");
    Serial.print((velocidadActual * 100) / 255);
    Serial.println("%");
    Serial.print("Clientes WiFi: ");
    Serial.println(WiFi.softAPgetStationNum());
    Serial.println("â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€\n");
  }
}
